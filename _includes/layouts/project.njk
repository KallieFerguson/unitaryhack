---
layout: layouts/base.njk
section: project
---
<div class="page-container">
  <h1>
    {% if emoji %}
      <span class="project-card__emoji">{{ emoji }}</span>
    {% endif %}
    <a href={{ project_url }}>{{ title }}</a>
  </h1>

  {% set bounties = gh[id or title | lower].bounties %}
  {% if bounties %}
    {% for state, bts in bounties | groupby("state") %}
      <h5>{{ state | capitalize }} bounties:</h5>
      <ul class="bounties">
        {% for bounty in bts %}
        {% set comma = joiner(", ") %}
          <li>
            <a class="tag bounty-{{ state }}" href="{{ bounty.url | url }}">${{ bounty.value }} | {{bounty.title}}</a>
            {% if state == "closed" and bounty.assignees.length != 0 %}
              <br>
              closed by:
              {% for hacker in bounty.assignees -%}
                {{ comma() }}<a href="https://github.com/{{ hacker }}">{{ hacker }}</a>
              {%- endfor %}
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    {% endfor %}
  {% endif %}
  <hr>
  {{ layoutContent | safe }}
  <nav>
    <a href="{{ '/projects/' | url }}">‚Üê View All Projects</a>
  </nav>
</div>